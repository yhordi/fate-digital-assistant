<%= form_for @system do |f|  %>
    <%= f.label "name" %>
  <div>
    <%= f.text_field "name", placeholder: "Your system name" %>
  </div>
    <%= f.label "description"  %>
  <div>
    <%= f.text_area "description", size: '30x5', placeholder: 'a short description about your system' %>
  </div>
  <%= f.label "make public?"%>
  <%= f.check_box :public %>
  <%= f.submit  %>
<% end %>