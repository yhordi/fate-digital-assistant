<%= form_for @system do |f|  %>
    <%= f.label "name" %>
  <div>
    <%= f.text_field "name", placeholder: "Your system name" %>
  </div>
  <div>
    <%= f.label "setting"  %>
    <%= f.select(:setting, options_for_select(@settings)) %>
  </div>
  <div>
    <%= f.label "description"  %>
  </div>
  <div>
    <%= f.text_area "description", size: '30x5', placeholder: 'a short description about your system' %>
  </div>
  <%= f.submit  %>
<% end %>
<%= link_to "Back", systems_path %>