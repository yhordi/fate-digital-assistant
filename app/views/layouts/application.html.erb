<!DOCTYPE html>
<html>
<head>
  <title>FATE: Dimensions</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <%= favicon_link_tag %>
</head>
<body>
  <div id="main-container" class="container-fluid">
    <div class="top row">
      <div class="navbar navbar-default col-xs-12">
        <div class='navbar-header'>
          <%= link_to "FATE: Dimensions", root_path, class: "navbar-brand" %>
        </div>
        <div>
          <% if session[:id] == nil %>
            <%= render "sessions/new" %>
          <% else %>
            <%= render "sessions/show" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class='row'>
      <% if session[:id] %>
        <div class="col-xs-6 col-sm-2" id="sidebar" role="navigation">
          <%= react_component('SideBar', {userId: session[:id]}) %>
        </div>
        <div id='nav-container'></div>
        <div id="container" class="col-xs-12 col-sm-10">
          <%= yield %>
        </div>
      <% else %>
        <div id="container">
          <%= yield %>
        </div>
      <% end %>
    </div>
  </div>
</body>
</html>
